<?xml version="1.0" encoding="UTF-8"?>

<phpunit backupGlobals="false"
         backupStaticAttributes="false"
         bootstrap="./bootstrap.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="false"
         verbose="false"
>
    <php>
        <!--
        for live tests
        <var name="liveKeys" value='{
            "google_api_key":"xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx",
            "google_search_engine_id":"xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
        }'/>
        -->
    </php>

    <testsuites>
        <testsuite name="SEOStats Test Suite">
            <directory>./SEOstatsTest</directory>
        </testsuite>

        <testsuite name="SeoStats Version 3Test Suite">
            <directory>./SeoStatsV3Test</directory>
        </testsuite>
    </testsuites>

    <groups>
        <exclude>
            <group>performance</group>
        </exclude>
    </groups>

    <filter>
        <whitelist>
            <directory suffix=".php">../SEOstats</directory>
            <directory suffix=".php">../src</directory>
            <exclude>
                <directory suffix=".php">../SEOstats/Services/3rdparty</directory>
            </exclude>
        </whitelist>
        <blacklist>
        </blacklist>
    </filter>

    <logging>
        <log type="coverage-text" target="php://stdout"/>
        <log type="coverage-clover" target="../build/logs/clover.xml"/>
    </logging>
</phpunit>
